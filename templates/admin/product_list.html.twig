{% extends 'admin/base.html.twig' %}

{% block main %}
   
<div class="container row g-3 align-items-center">
 <h2>Products lists</h2>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Licence</th>
        <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
        <th scope="row"><a href="{{ path('admin_product_show', {'id' : product.id } ) }}" style="color: black" >{{ product.id }}</a></th>
        <td>{{product.name}}</td>
        <td>{{product.price}} â‚¬</td>
        <td>{{product.stock}}</td>
        <td>{{product.description}}</td>
        <td>{{product.category.name}}</td>
        <td>{{product.licence.name}}</td>
        <td><img src="{{ asset("media/" ~ product.media[0].src) }}" alt="{{ product.media[0].alt }}"></td>
        {# <td><img src="{{ asset("media/" ~ product.media[0].src) }}" alt="{{ product.media[0].alt }}"></td> #}
        <td>
        <a href="{{ path('admin_product_update',{'id' : product.id})}}" style="color: black">
        <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a href="{{ path('admin_product_delete',{'id' : product.id})}}" style="color: black">
        <i class="fa-solid fa-trash-can"></i>
        </a>
        </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
    <div>
        <a href="{{ path('admin_product_create')}}" class="btn btn-outline-secondary">Ajouter un product</a>
    </div>
</div>

{% endblock %}
